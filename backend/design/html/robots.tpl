{literal}
    <script>
        var editor = CodeMirror.fromTextArea(document.getElementById("robots"), {
            mode: "mixed",
            lineNumbers: true,
            styleActiveLine: true,
            matchBrackets: false,
            enterMode: 'keep',
            indentWithTabs: false,
            indentUnit: 2,
            tabMode: 'classic',
            theme : 'monokai'
        });
    </script>
{/literal}
